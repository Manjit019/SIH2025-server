{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["ES2020", "ESNext"],
    "moduleResolution": "bundler",
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
 
  },
  "include": ["./src/**/*", "./prisma/**/*", "./**/*.ts"],
  "exclude": ["node_modules", "build"]
}
